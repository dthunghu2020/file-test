<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#42280E"
                android:endColor="#42280E"
                android:startColor="#42280E" />
            <size
                android:width="10dp"
                android:height="10dp" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <layer-list>
                <item
                    android:bottom="5dp"
                    android:left="5dp"
                    android:right="5dp"
                    android:top="5dp">
                    <shape>
                        <gradient
                            android:angle="-90"
                            android:centerColor="#05dfd7"
                            android:endColor="#05dfd7"
                            android:startColor="#05dfd7" />
                        <corners android:radius="10dp" />
                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>
</layer-list>